#VRML V2.0 utf8

PROTO Madera [
    field SFVec3f size 0.2 0.2 2.1  
    field SFVec3f posicion 0 0 0  
] {
    Transform {
        translation IS posicion
        children [
            Shape {
                appearance Appearance {
					texture	ImageTexture {
						url	"madera.jpg"
					}
                }
                geometry Box {
                    size IS size
                }
            }	
        ]
    }
}

PROTO Tornillo [
    field SFVec3f posicion 0 0 0   
    field SFColor color 0.55 0.47 0.14  
] {
    Transform {
        translation IS posicion
        children [
            Shape {
                appearance Appearance {
                    material Material {
                        diffuseColor IS color
                    }
                }
                geometry Cylinder {
                    radius 0.05   
                    height 0.1    
                }
            }
            Transform {
                translation 0 0.05 0 
                children [
                    Shape {
                        appearance Appearance {
                            material Material {
                                diffuseColor IS color
                            }
                        }
                        geometry Cylinder {
                            radius 0.05  
                            height 0.03 
                        }
                    }
                    Transform {
                        translation 0 0.01 0  
                        children [
                            
                            Shape {
                                appearance Appearance {
                                    material Material {
                                        diffuseColor 0 0 0  
                                    }
                                }
                                geometry Box {
                                    size 0.01 0.004 0.05  
                                }
                            }
                         
                            Shape {
                                appearance Appearance {
                                    material Material {
                                        diffuseColor 0 0 0 
                                    }
                                }
                                geometry Box {
                                    size 0.05 0.004 0.01  
                                }
                            }
                        ]
                    }
                ]
            }
        ]
    }
}


