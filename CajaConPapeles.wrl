#VRML V2.0 utf8

PROTO BaseCaja [
  field SFVec3f translation 0 -1 0
  field SFVec3f size 2 2 2
  field SFColor color 0.5 0.2 0
] {
  Transform {
    translation IS translation
    children [
      Shape {
        appearance Appearance {
          material Material {
            diffuseColor IS color
          }
        }
        geometry Box {
          size IS size
        }
      }
    ]
  }
}

