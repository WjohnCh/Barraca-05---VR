#VRML V2.0 utf8

PROTO Marco_P[
  field SFVec3f posicion 0 0 0
  field MFString textura ["texturamarco.jpg"]
  field SFVec3f size 0.42 11.1 0.25
  field	SFRotation rotacion 0 0 0 0
]{
  Transform{
    translation IS posicion
    rotation IS	rotacion
    children [Shape {
      geometry Box{size IS size}
      appearance Appearance {
        texture ImageTexture {url IS textura}
      }
    }]
  }
}

PROTO Pizarra[
  field SFVec3f posicion 0 0 0
  field MFString textura ["imagen.jpg"]
  field SFVec3f size 23.88 11.1 0.1
]{
  Transform{
    translation IS posicion
    rotation 0 1 0 1.57
    children [Shape {
      geometry Box { size IS size }
      appearance Appearance {
        texture ImageTexture { url IS textura }
      }
    }
 	]
  }

}

