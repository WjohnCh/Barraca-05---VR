DEF MiScript Script {
    eventIn SFBool click
    eventOut SFBool lightOn

    field SFBool isOn TRUE

    url "javascript:
        function click(isActive) {
            if (isActive) {
                isOn = !isOn;
                lightOn = isOn;
            }
        }
    "
}

