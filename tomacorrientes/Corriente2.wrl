#VRML V2.0 utf8
PROTO BaseEnchufe [
  field SFVec3f translation 0 0 0
  field SFVec3f size 3 2 0.2 
  field SFColor color 0.9 0.9 0.9
] {
  Transform {
    translation IS translation
    rotation 0 1 0 1.57  # Rotación 90 grados hacia la derecha
    children [
      Shape {
        appearance Appearance {
          material Material {
			  emissiveColor 0.9 0.9 0.9
            diffuseColor IS color
          }
        }
        geometry Box {
          size IS size
        }
      }
    ]
  }
}

# PROTO para el cuadrado grande
PROTO Cuadrado [
  field SFVec3f translation 0 0 0
  field SFVec3f size 0.3 0.3 0.3  # Tamaño aumentado para un cuadrado más grande
] {
  Transform {
    translation IS translation
    children [
      Shape {
        appearance Appearance {
          material Material {
            diffuseColor 0 0 0  # Color negro
          }
        }
        geometry Box {
          size IS size
        }
      }
    ]
  }
}

# Enchufe con cuadrados grandes pegados al borde izquierdo
BaseEnchufe {
  translation 0 0 0
  size 3 2 0.2
  color 0.9 0.9 0.9
}

BaseEnchufe {
  translation 0 0 0.1
  size 2.5 1.5 0.05
  color 0.8 0.8 0.8
}

# Cuadrados grandes en lugar de líneas, pegados al borde izquierdo
Cuadrado {
  translation 0.2 0.5 0.15  # Posición superior izquierda
}

Cuadrado {
  translation 0.2 -0.5 0.15  # Posición inferior izquierda
}
